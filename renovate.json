{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":docker",
    "docker:enableMajor",
    ":disableDependencyDashboard",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
    ":label(renovate)",
    ":assignee(max)"
  ],
  "recreateClosed": true,
  "pip_requirements": {
    "fileMatch": ["requirements-dev\\.txt"]
  }
}
